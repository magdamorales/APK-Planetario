<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="planetario.HamburguerMenu">
    <MasterDetailPage.Master>
        <ContentPage
            Title="Salas"
    BackgroundColor="Transparent"
            Padding="0,40,0,0">
            <ListView BackgroundColor="Transparent" x:Name="ListMenu" ItemSelected="ListMenu_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell TextColor="Black" DetailColor="Black" Height="15"
                                   Text="{Binding MenuTitle}"
                                   Detail="{Binding MenuDetail}"
                                   ImageSource="{Binding icon}">

                        </ImageCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </ContentPage>
    </MasterDetailPage.Master>
    </MasterDetailPage>
    

